# Environment Variables Configuration
# Copy this file to .env and fill in your values

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=notes_rag
MONGODB_COLLECTION=notes
MONGODB_VECTOR_INDEX_NAME=vector_index

# Application Configuration
APP_NAME=Notes RAG API
APP_VERSION=1.0.0
DEBUG=false

# CORS Origins (comma-separated for production)
CORS_ORIGINS=["http://localhost:19000","http://localhost:19002","exp://localhost:19000","*"]

# Vector Search Configuration
VECTOR_SEARCH_LIMIT=10
VECTOR_SEARCH_NUM_CANDIDATES=100
